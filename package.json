{
  "name": "qc-audit-tracker",
  "version": "0.9.0",
  "type": "module",
  "description": "QC Audit Tracker - Chrome extension for tracking your work during QC auditing on Outlier AI platform.",
  "private": true,
  "author": "zeroxvee",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zeroxvee/qc-audit-tracker.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build && vite --config vite.config.page-scripts.ts build",
    "build:page-scripts": "vite --config vite.config.page-scripts.ts build",
    "preview": "vite preview",
    "clean": "rm -rf dist",
    "typecheck": "tsc -b",
    "test": "jest",
    "test:unit": "jest --testPathPattern=src/.*\\.test\\.(ts|tsx)$",
    "test:integration": "jest --testPathPattern=src/__tests__/integration",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:performance": "jest --testPathPattern=src/__tests__/performance --maxWorkers=2",
    "test:a11y": "echo 'Accessibility tests not yet implemented'",
    "validate:pre-deployment": "node scripts/pre-deployment-check.js",
    "lint": "echo 'ESLint not yet configured'",
    "audit": "npm audit --audit-level=moderate"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/react-table": "^8.21.3",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.525.0",
    "react": "^19.0.0",
    "react-aria-components": "^1.10.1",
    "react-day-picker": "^9.7.0",
    "react-dom": "^19.0.0",
    "recharts": "^3.1.0",
    "tailwindcss": "^4.1.11",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0",
    "@eslint/js": "^9.30.0",
    "@playwright/test": "^1.54.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "^0.0.313",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.13.14",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitejs/plugin-react-swc": "^3.11.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.30.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "msw": "^2.10.4",
    "terser": "^5.43.1",
    "ts-jest": "^29.4.0",
    "typescript": "~5.7.2",
    "vite": "^6.2.0",
    "vite-plugin-zip-pack": "^1.2.4"
  }
}